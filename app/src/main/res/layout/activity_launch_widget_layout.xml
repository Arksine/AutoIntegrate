<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <!--  TODO: Add content descriptions to strings.xml -->

    <ImageButton
        android:id="@+id/widget_btn_settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_settings_launch"
        android:background="@null"
        android:contentDescription="Launch AutoIntegrate Settings"/>

    <ImageButton
        android:id="@+id/widget_btn_resistive_map"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_steering_wheel"
        android:background="@null"
        android:contentDescription="Launch Button Mapping Activity"/>

    <ImageButton
        android:id="@+id/widget_btn_camera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_backup_camera"
        android:background="@null"
        android:contentDescription="Launch Camera Activity"/>

    <ImageButton
        android:id="@+id/widget_btn_radio"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_radio"
        android:background="@null"
        android:contentDescription="Launch HD Radio Activity"/>

</LinearLayout>